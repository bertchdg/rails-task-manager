<div class="card">
<div class="card-body">
<h2 class="card-title"><%= @task.title %></h2>
<p class="card-text"><%= @task.details %></p>
<p><%= @task.completed ? "This task is complete." : "This task is not complete yet." %></p>
<p class="btn"><%= link_to "EDIT", edit_task_path %></p>
<p class="btn"><%= link_to "Delete", task_path(@task),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
<br><p class="btn"><%= link_to "Back to My Tasks list", tasks_path %></p>
</div>
</div>
