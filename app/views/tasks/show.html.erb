<div class="container">
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed ? "This task is complete." : "This task is not complete yet." %></p>
<%= link_to "EDIT THIS TASK", edit_task_path %>
<%= link_to "Back to My Tasks list", tasks_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</div>
