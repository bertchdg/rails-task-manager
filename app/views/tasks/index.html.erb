<h1>My Tasks</h1>
<ul class="list-group">
  <% @tasks.each do |task| %>
  <li class="list-group-item">
    <%= task.completed ? "Y" : "N" %>
    <label class="form-check-label" for="firstCheckbox"><%= link_to task.title, task_path(task) %>
    <%= link_to "x",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></label>
  </li>
</ul>
  <% end %>
<%= link_to "Create a new Task", new_task_path %>
